<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?ChiliSurfaceBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16dp"
        android:paddingHorizontal="@dimen/padding_16dp"
        android:textAlignment="center"
        android:textAppearance="@style/Chili.H4.Primary.Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Сделайте фото оборотной стороны паспорта" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16dp"
        android:paddingHorizontal="@dimen/padding_16dp"
        android:textAlignment="center"
        android:textAppearance="@style/Chili.H7.Secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="Хорошее освещение и фон другого цвета ускорят проверку данных" />

    <ImageView
        android:id="@+id/iv_correct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0dp"
        android:layout_marginHorizontal="@dimen/view_40dp"
        android:layout_marginVertical="@dimen/view_32dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/btn_action"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        tools:src="@drawable/nur_process_flow_ic_instruction_id_card_front" />

    <Button
        android:id="@+id/btn_action"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:text="@string/nur_process_flow_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>